<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/onejob_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Заголовок"/>
    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onejob_details_label"/>
    <Button
        android:id="@+id/onejob_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setNotification"/>

    <CheckBox
        android:id="@+id/onejob_solved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Цель выполнена "/>

    <EditText
        android:id="@+id/onejob_multitext"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:ems="10"
        android:inputType="textMultiLine" />

</LinearLayout>